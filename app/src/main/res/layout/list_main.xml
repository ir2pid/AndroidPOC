<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainPresenter"
            type="com.noisyninja.quandoopoc.view.interfaces.IMainPresenter" />

        <variable
            name="customer"
            type="com.noisyninja.quandoopoc.model.Customer" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> mainPresenter.openDetail(customer.id)}"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.noisyninja.quandoopoc.view.custom.IconTextView
                android:id="@+id/iconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/image_margin"
                android:background="@drawable/border"
                android:contentDescription="@string/customer_thumbnail"
                android:padding="@dimen/image_padding"
                android:textSize="@dimen/text_size1"
                android:text="@string/user"
                android:textColor="@color/blue"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_toEndOf="@id/iconTextView"
                android:layout_toRightOf="@id/iconTextView"
                android:text="@{Integer.toString(customer.id)}"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_margin="@dimen/text_margin"
                android:layout_toEndOf="@id/iconTextView"
                android:layout_toRightOf="@id/iconTextView"
                android:text="@{customer.firstName}" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>