<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="detailPresenter"
            type="com.noisyninja.quandoopoc.view.interfaces.IDetailPresenter" />

        <variable
            name="results"
            type="com.noisyninja.quandoopoc.model.Table" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> detailPresenter.setBookMarked(view, results)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/image_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(results.customerID)}" />

            <com.noisyninja.quandoopoc.view.custom.IconTextView
                android:id="@+id/grid_text"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginTop="@dimen/text_margin"
                android:background="@drawable/border"
                android:textSize="@dimen/text_size2"
                app:isOccupied="@{results.occupied}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>